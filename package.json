{
  "name": "root",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna exec yarn",
    "dev:ui": "lerna exec --scope xc-ui yarn dev",
    "dev:utility": "lerna exec --scope xc-utility yarn dev",
    "build:ui": "lerna exec --scope xc-ui yarn build",
    "build:utility": "lerna exec --scope xc-utility yarn build",
    "lint": "lerna exec -- eslint .",
    "lint:fix": "lerna exec -- eslint . --fix",
    "publish": "lerna publish"
  },
  "dependencies": {
    "classnames": "^2.5.1",
    "sass": "^1.85.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@stylistic/eslint-plugin": "^3.0.1",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-vue": "^9.32.0",
    "globals": "^15.14.0",
    "lerna": "^8.1.9",
    "prettier": "^3.4.2",
    "typescript-eslint": "^8.23.0",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.18",
    "typescript": "~5.7.2",
    "vite": "^6.1.0"
  }
}
