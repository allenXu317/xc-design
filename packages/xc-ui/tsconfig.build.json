{
  "compilerOptions": {
    "outDir": "build",
    "module": "ESNext",
    "target": "ES5",
    "declaration": true,
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "es2015"]
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "coverage",
    "**/*.test.tsx",
    "**/*.test.ts",
    "**/*.stories.tsx"
  ],
}