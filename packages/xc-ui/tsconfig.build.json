{
  "compilerOptions": {
    "outDir": "dist",
    "module": "ESNext",
    "target": "ES5",
    "declaration": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "lib": ["ES2015", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
  },
  "include": ["./src"],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "coverage",
    "**/*.test.tsx",
    "**/*.test.ts",
    "**/*.stories.tsx",
    "**/App.tsx",
    "**/main.tsx",
  ],
}